<!-- Adding custom models -->
@model BlogProject.Models.ViewModels.AddTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add new tag</h1>
    </div>
</div>

<!-- Adding form to get the user input -->
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
             <label class="form-label">Name</label>
             <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Dispaly Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
        </div>
        <!-- Adding the button -->
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>